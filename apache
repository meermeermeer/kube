apiVersion: v1
kind: Service
metadata:
  name: apache1
  namespace: apache1
spec:
  type: NodePort
  selector:
    app: httpd_app
  ports:
    - port: 80
      targetPort: 80
      nodePort: 30010
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: apache1
  namespace: apache1
  labels:
    app: httpd_app
spec:
  replicas: 2
  selector:
    matchLabels:
      app: httpd_app
  template:
    metadata:
      labels:
        app: httpd_app
    spec:
      containers:
        - name: apache1
          image: httpd:latest
          ports:
            - containerPort: 80
